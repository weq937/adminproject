extends ../common/common
block admin 
 .mws-panel.grid_8
  .mws-panel-header
    span
      i.icol-user
      | 用户订单商品列表
  .mws-panel-body.no-padding
    #DataTables_Table_1_wrapper.dataTables_wrapper(role='grid')
      #DataTables_Table_1_length.dataTables_length
        label
          | 展示 
          select(size='1' name='DataTables_Table_1_length' aria-controls='DataTables_Table_1')
            option(value='10' selected='selected') 10
            option(value='25') 25
            option(value='50') 50
            option(value='100') 100
          |  行
      #DataTables_Table_1_filter.dataTables_filter
        label
          | 用户订单商品搜索: 
          input(type='text' aria-controls='DataTables_Table_1')
      table#DataTables_Table_1.mws-datatable-fn.mws-table.dataTable(aria-describedby='DataTables_Table_1_info')
        thead
          tr(role='row')
            th.sorting_asc(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-sort='ascending' aria-label='Rendering engine: activate to sort column descending' style='width: 258px;') 序号
            th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Browser: activate to sort column ascending' style='width: 333px;') 订单商品名称
            th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Platform(s): activate to sort column ascending' style='width: 309px;') 订单商品图片  
            th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Engine version: activate to sort column ascending' style='width: 225px;') 订单购买总数  
        tbody(role='alert' aria-live='polite' aria-relevant='all')
         -for(let v of data)
           tr.odd
            td.sorting_1 #{v.id}
            td.Firefox #{v.foodname} 
            td 
              img(src=`https://weq01.oss-cn-beijing.aliyuncs.com/${v.pic}`)
            td.Win #{v.count}
            
      #DataTables_Table_1_info.dataTables_info 显示50个中的1-10个
      #DataTables_Table_1_paginate.dataTables_paginate.paging_full_numbers
        a#DataTables_Table_1_first.first.paginate_button.paginate_button_disabled(tabindex='0') 首页
        a#DataTables_Table_1_previous.previous.paginate_button.paginate_button_disabled(tabindex='0') 上一页
        span
          a.paginate_active(tabindex='0') 1
          a.paginate_button(tabindex='0') 2
          a.paginate_button(tabindex='0') 3
          a.paginate_button(tabindex='0') 4
          a.paginate_button(tabindex='0') 5
        a#DataTables_Table_1_next.next.paginate_button(tabindex='0') 下一页
        a#DataTables_Table_1_last.last.paginate_button(tabindex='0') 最后一页

