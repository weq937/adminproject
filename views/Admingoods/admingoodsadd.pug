extends ../common/common
block admin
 
  .mws-panel.grid_8
   .mws-panel-header
    span 商家书籍添加
   .mws-panel-body.no-padding
    form.mws-form(action='/admin/goodsdoadd' method="POST" enctype="multipart/form-data")
      .mws-form-inline
        .mws-form-row
          label.mws-form-label 书籍名称
          .mws-form-item
            input.large(type='text' name='foodname')
        .mws-form-row
          label.mws-form-label 书籍图片
          .mws-form-item
            input.large(type='file' name='foodpic')
        .mws-form-row
          label.mws-form-label 宣传语
          .mws-form-item
            input.large(type='text' name='descr')
        .mws-form-row
          label.mws-form-label 书籍价格
          .mws-form-item
            input.large(type='text' name='price')
        .mws-form-row
          label.mws-form-label 所属商家
          .mws-form-item
            select.large(name="shoplist_id")
              option(value="") --请选择--
              -for(let v of data)
                option(value=`${v.id}`) --#{v.shopname}--
             

      .mws-button-row
        input.btn.btn-danger(type='submit' value='提交')
        input.btn(type='reset' value='重置')